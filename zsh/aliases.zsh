alias reload!='. ~/.zshrc'

# My personal aliases for making my life easier
# Listing files
alias ls='/bin/ls -A --color'  # Default ls to show everything but . and .. and colorize it.
alias ll='ls -lh'         # List it long and make the output in human readable formats.

# Removing files
alias rm='/bin/rm -iv'         # Make sure we prompt for removal and show what we are removing when it happens."
